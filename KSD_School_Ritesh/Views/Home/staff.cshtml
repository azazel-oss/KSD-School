<script src="~/Scripts/jquery-3.6.0.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/staff.js"></script>

<div class="container">
    <h2>Staff Record</h2>
    
   
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal" onclick="clearTextBox();">Add New Staff Record </button><br /><br />
    <table class="table table-dark ">
        <thead>
            <tr>
                <th style="display: none;">
                        ID
                    </th>
                <th>
                    Name
                </th>
                <th>
                    Date Of Birth
                </th>
                <th>
                    Date Of Joining
                </th>
                <th>
                    Date Of Relieve
                </th>
                <th>
                    Is Retired
                </th>
                <th>
                    Is Teacher
                </th>
                <th>
                    Role
                </th>
                <th>
                    Mobile No
                </th>
                <th>
                    Salary
                </th>
                <th>
                    Emergency Contact
                </th>
                <th>
                    Department
                </th>
            </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-bs-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Add Staff</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Student_id" style="display: none;">ID</label>
                        <input type="text" class="form-control" id="Staff_id" placeholder="Id" disabled style="display: none;"/>
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label for="DOB">Date Of Birth</label>
                        <input type="text" class="form-control" id="DOB" placeholder="Date Of Birth" />
                    </div>
                    <div class="form-group">
                        <label for="DO_joining">Date Of Joining</label>
                        <input type="text" class="form-control" id="DO_joining" placeholder="Date Of Joining" />
                    </div>
                    <div class="form-group">
                        <label for="DO_relieve">Date Of Relieve</label>
                        <input type="text" class="form-control" id="DO_relieve" placeholder="Date Of Relieve" />
                    </div>


                    <div class="form-group">
                        <label>Is Teacher</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Is_teacher" value="true" checked>
                            <label class="form-check-label">
                                Yes
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Is_teacher" value="false">
                            <label class="form-check-label">
                                No
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Is Retired</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Is_retired" value="true" checked>
                            <label class="form-check-label">
                                Yes
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="Is_retired" value="false">
                            <label class="form-check-label">
                                No
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Role">Role</label>
                        <input type="text" class="form-control" id="Role" placeholder="Role" />
                    </div>
                    <div class="form-group">
                        <label for="Mobile_no">Mobile No</label>
                        <input type="text" class="form-control" id="Mobile_no" placeholder="Mobile No" />
                    </div>
                    <div class="form-group">
                        <label for="Salary">Salary</label>
                        <input type="text" class="form-control" id="Salary" placeholder="Salary" />
                    </div>
                    <div class="form-group">
                        <label for="Emergency_Contact">Emergency Contact</label>
                        <input type="text" class="form-control" id="Emergency_Contact" placeholder="Emergency Contact" />
                    </div>
                    <div class="form-group">
                        <label for="Department">Department</label>
                        <input type="text" class="form-control" id="Department" placeholder="Department" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

