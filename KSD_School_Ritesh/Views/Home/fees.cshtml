<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/fees.js"></script>

<div class="container">
    <h2>Fee Record</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Fee Entry</button><br /><br />
    <table class="table table-dark ">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Transaction ID
                </th>
                <th>
                    Student ID
                </th>
                <th>
                    Duration
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Amount Pending
                </th>
                
            </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Add Fee Entry</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                            <label for="Fee_id">ID</label>
                            <input type="text" class="form-control" id="Fee_id" placeholder="Id" disabled="disabled" />
                        </div>
                    <div class="form-group">
                        <label for="Transaction_id">Transaction ID</label>
                        <input type="text" class="form-control" id="Transaction_id" placeholder="Transaction ID" />
                    </div>
                    <div class="form-group">
                        <label for="Student_id">Student ID</label>
                        <input type="text" class="form-control" id="Student_id" placeholder="Student ID" />
                    </div>
                    <div class="form-group">
                        <label for="Duration">Duration</label>
                        <input type="text" class="form-control" id="Duration" placeholder="Duration" />
                    </div>
                    <div class="form-group">
                        <label for="Amount">Amount</label>
                        <input type="text" class="form-control" id="Amount" placeholder="Amount" />
                    </div>
                    @*<div class="form-group">
                            <label for="Is_teacher ">Is Teacher</label>
                            <input type="text" class="form-control" id="Is_teacher" placeholder="Is Teacher" />
                        </div>
                        <div class="form-group">
                            <label for="Is_retired">Is Retired</label>
                            <input type="text" class="form-control" id="Is_retired" placeholder="Is retired" />
                        </div>*@
                    <div class="form-group">
                        <label for="Amount_pending">Amount Pending</label>
                        <input type="text" class="form-control" id="Amount_pending" placeholder="Amount Pending" />
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


